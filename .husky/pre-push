#!/bin/sh
set -e

BRANCH=$(git rev-parse --abbrev-ref HEAD)

# Try comparing to origin/branch, else fallback to previous commit
if git rev-parse --verify --quiet origin/$BRANCH >/dev/null; then
  DIFF_BASE="origin/$BRANCH"
else
  DIFF_BASE="HEAD~1"
fi

echo "ğŸ” Comparing changes from $DIFF_BASE to HEAD"

CHANGED_JS=$(git diff --name-only "$DIFF_BASE" HEAD | grep '^resources/js/' || true)

if [ -z "$CHANGED_JS" ]; then
  echo "âœ… No JS changes detected. Skipping build."
  exit 0
fi

echo "ğŸ“¦ JS changes detected. Running build..."
npm run build

echo "ğŸ§ª Checking for Vite output changes..."
if git status --porcelain public/build | grep .; then
  echo "ğŸ“ Detected changes in public/build â€” staging and committing..."
  git add -A public/build
  git commit -m "chore: update Vite build (auto-commit from pre-push)" --no-verify

  echo "ğŸš« Build was committed. Please re-run 'git push' to include the new commit."
  exit 1
else
  echo "âœ… Build output unchanged. Proceeding with push."
fi
